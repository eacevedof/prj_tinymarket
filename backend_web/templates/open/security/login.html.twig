{% extends 'open/login-layout.html.twig' %}
{% block title %}Admin{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/modules/login/login.css">
{% endblock %}

{% block body %}
<div class="example-wrapper">
    {% verbatim %}
    <form id="form-login" @submit="handleSubmit" class="form-signin">
        <div class="text-center mb-4" >
            <img class="mb-4" src="http://www.elchalanaruba.com/wp-content/uploads/2020/01/El-Chala%CC%81n-logo-m.png" alt="" width="150" height="55">
            <h1 class="h3 mb-3 font-weight-normal">Restrict Area</h1>
            <p></p>
        </div>

        <div class="form-label-group">
            <input type="email" v-model="email" id="email" ref="email" class="form-control" placeholder="Email" required autofocus>
            <label for="email">Email</label>
        </div>

        <div class="form-label-group">
            <input type="password" v-model="password" id="password" class="form-control" placeholder="Password" required>
            <label for="password">Password</label>
        </div>

        <button class="btn btn-lg btn-dark btn-block" type="submit">{{ btnsend }}</button>
        <p class="mt-5 mb-3 text-muted text-center">&copy; 2020</p>
    </form>
    {% endverbatim %}
</div>
<script src="/modules/login/vuelogin.js"></script>
{% endblock %}
